// tsconfig.node.json (настройки для Vite/Node-кода)
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "composite": true        /* требуется для project references */
  },
  "include": ["vite.config.ts"]
}
